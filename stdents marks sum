//Complete the following function.

int marks_summation(int* marks, int number_of_students, char gender) {
  //Write your code here.
  int i,b=0,g=0;
  for(i=0;i<number_of_students;i++)
  i%2==0?(b+=marks[i]):(g+=marks[i]);     //marks[i]=*(marks+i)
  if(gender=='b')
  return(b);
  else 
  return(g);
}

